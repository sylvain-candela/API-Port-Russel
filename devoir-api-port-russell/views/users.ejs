<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/style.css">
    <title>Gestion des Utilisateurs</title>
</head>
<body>
    <h1>Tableau de bord des Utilisateurs</h1>

    <a href="/users/signup" class="btn-add">Ajouter un Utilisateurs</a>

    <table class="container-table">
        <thead>
            <tr>
                <th>Nom Utilisateur</th>
                <th>Email</th>
                <th>Mot de passe</th>
                
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td>
                        <a href="/users/<%= user._id %>">Voir</a>
                        
                        <form action="/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button onclick="deleteUser('<%= user._id %>')">Supprimer</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>